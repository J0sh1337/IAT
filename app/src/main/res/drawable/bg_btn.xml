<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/black"/>
            <corners android:radius="@dimen/btn_corner_radius_green"/>
        </shape>
    </item>

    <item android:drawable="@color/dark_blue">
        <shape>
            <stroke android:width="@dimen/btn_width" android:color="@color/black"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/btn_corner_radius_purple"/>
        </shape>
    </item>

</selector>